{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: 当前文件",
            "type": "python",
            "request": "launch",
            "program": "${file}",  // 使用当前打开的文件
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": true,
            "cwd": "${fileDirname}",  // 使用当前文件所在目录
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "python": "g:/project/python/pcxzf/pcxzf/Scripts/python.exe"
        }
    ]
}